import java.util.*;
class Main{
    public static void main(String args[]){
       Scanner sc = new Scanner(System.in);

       int n = sc.nextInt();
       int k=1;
       for(int i=1;i<=n;i++){
          for(int j=1;j<=n-2*(i-1);j++){ 
            System.out.print("*");
          }
          System.out.println();
          for(int j=1;j<=k;j++){
            System.out.print(" ");
          }k++;
       }
    }
}
